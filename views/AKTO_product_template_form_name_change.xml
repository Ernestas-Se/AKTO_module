<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_form_move_name" model="ir.ui.view">
        <field name="name">product.template.form.move.name</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="priority" eval="55"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//field[@name='name']" position="replace">
                <field name="name_code" readonly="1" nolabel="1" class="oe_inline" style="white-space: nowrap;"/>
            </xpath>
            <xpath expr="//sheet//field[@name='type']" position="after">
                <field name="name"/>
            </xpath>
        </field>
    </record>
    <record id="view_product_template_form_name_code" model="ir.ui.view">
        <field name="name">product.template.form.name.code</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="priority" eval="60"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//field[@name='name_code']" position="attributes">
                <attribute name="nolabel">1</attribute>
                <attribute name="class">oe_inline</attribute>
                <attribute name="style">white-space: nowrap;</attribute>
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
