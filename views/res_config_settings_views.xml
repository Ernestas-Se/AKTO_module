<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form_akto_seq" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.akto.seq</field>
    <field name="model">res.config.settings</field>

    <!-- FIX: use the correct base view id -->
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>

    <field name="arch" type="xml">
      <!-- Works across 16/17/18/19. Alternative targets are noted below. -->
      <xpath expr="//div[hasclass('settings')]" position="inside">
        <div class="app_settings_block" data-string="AKTO" string="AKTO" data-key="akto">
          <h2>AKTO Product Codes</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="enforce_six_digit_sku"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="enforce_six_digit_sku"/>
                <div class="text-muted">Require Internal Reference to be exactly 6 digits (default).</div>
              </div>
            </div>

            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="default_product_code_sequence_id" options="{'no_open': False}"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="default_product_code_sequence_id"/>
                <div class="text-muted">Used when no category sequence is set. Tip: prefix=00, padding=4.</div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>