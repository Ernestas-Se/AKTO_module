<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form_akto_seq" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.akto.seq</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='companies']" position="after">
        <block title="AKTO Product Codes" id="akto_product_code_settings">
          <setting id="akto_default_seq"
                   string="Default Sequence (no category)"
                   help="Used when no category sequence is set. Any format is accepted.">
            <field name="akto_default_product_code_sequence_id" options="{'no_open': False}"/>
          </setting>
        </block>
      </xpath>
    </field>
  </record>
</odoo>