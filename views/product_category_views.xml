<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_product_category_form_inherit_akto_seq" model="ir.ui.view">
    <field name="name">product.category.form.akto.seq</field>
    <field name="model">product.category</field>
    <field name="inherit_id" ref="product.product_category_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//group" position="inside">
        <field name="code_sequence_id" options="{'no_open': False}"/>
      </xpath>
    </field>
  </record>

  <record id="akto_product_template_list_reorder" model="ir.ui.view">
    <field name="name">akto.product.template.list.reorder</field>
    <field name="model">product.template</field>
    <!-- Use the real XML ID of the Products (Templates) List view -->
    <field name="inherit_id" ref="product.product_template_tree_view"/>

    <field name="arch" type="xml">
      <!-- Move Internal Reference before Name -->
      <xpath expr="//list/field[@name='name']" position="before">
        <field name="default_code" position="move"/>
      </xpath>
      
    </field>
  </record>
</odoo>
